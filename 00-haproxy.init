#!/usr/bin/with-contenv sh

# generate a file from a template for haproxy and launch haproxy with the new config file
exec consul-template -consul ${CONSUL_URL} -template "/consul-template/haproxy.cfg.tmpl:/consul-template/haproxy.cfg 
exec haproxy -f /console-template/haproxy.cfg -p /var/run/haproxy.pid -D
